extends layout

block content
  .w3-card-4
    header.w3-container.w3-purple
      h1 Update Student

    form.w3-container(method="POST")
        img(src="/images/student.png" alt="Avatar" class="w3-left w3-circle" width="100")
        fieldset
            legend Metadata
            label Id
            input.w3-input.w3-round(type="text" name="id" readonly value=a.id)
            label Name
            input.w3-input.w3-round(type="text" name="nome" value=a.nome)
            label Git
            input.w3-input.w3-round(type="text" name="gitlink" value=a.gitlink)  

            .w3-container 
              fieldset.w3-margin 
                legend TPC 
                each val in [1, 2, 3, 4, 5, 6, 7, 8]
                  if "tpc"+val in a
                    input.w3-check.w3-margin-left(type="checkbox" value="1" checked name="tpc"+val)
                    label= "TPC" + val 
                  else
                    input.w3-check.w3-margin-left(type="checkbox" value="1" name="tpc"+val)
                    label= "TPC" + val 
                

        button.w3-btn.w3-purple.w3-mb-2(type="submit") Register

    footer.w3-container.w3-purple 
      h5 Generated by RPCW2023 in #{d} - #[a(href="/") Return]
