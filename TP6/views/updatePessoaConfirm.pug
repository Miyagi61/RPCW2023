extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Person Record Updated: #{a.id}
        
    .w3-container
        img.w3-left.w3-circle(src="/images/student.png" alt="Avatar" width="100")
        ul.w3-ul.w3-card-4
          li #[b Nome:] #{a.nome}
          li #[b Idade:] #{a.idade}
          li #[b Morada:] #{a.cidade},#{a.distrito}
          li #[b BI:] #{a.BI}
          li #[b Profissão:] #{a.profissao}
          li #[b Partido Político:] #{a.partido_politico.party_name} (#{a.partido_politico.party_abbr})  
          li #[b Religião:] #{a.religiao}
          li #[b Desportos:]
          ul.w3-ul
            each desp in a.desportos
              li=desp
          li #[b Animais:]
          ul.w3-ul
            each animal in a.animais
              li=animal
          li #[b Figura Pública PT:]
          ul.w3-ul
            each fig in a.figura_publica_pt
              li=fig
          li #[b Marca Carro:] #{a.marca_carro}
          li #[b Destinos Favoritos:]
          ul.w3-ul
            each dest in a.destinos_favoritos
              li=dest
          .w3-container 
            fieldset.w3-margin 
              legend Atributos
              each atrib in a.atributos
                  if atrib == "comida_favorita"
                    b Comida Favorita #{a.atributos.atrib}  
                  else if a.atributos.atrib
                      input.w3-check(type="checkbox" name=atrib value="1" checked)
                      label= atrib
                  else
                      input.w3-check(type="checkbox" name=atrib value="0")
                      label= atrib
    footer.w3-container.w3-teal 
      h5 Generated by RPCW2023 in #{d} - #[a(href="/") Return]



