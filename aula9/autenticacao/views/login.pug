extends layout

block content
    .w3-card-4 
        header.w3-indigo 
            h1.w3-center Login Form 
        
        form.w3-container(action="/users/login" method="POST")
            fieldset 
                legend Introduza as credenciais de login
                label Utilizador
                input.w3-input(type="text" name="username" required)
                label Palavra-passe
                input.w3-input(type="password" name="password" required)
            input.w3-btn.w3-red(type="submit" value="Enviar")

        footer.w3-indigo 
            address Generated by auth::RPCW2023 #{d}